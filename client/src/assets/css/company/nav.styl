@import '~@/assets/css/varibles.styl';
.nav
    position fixed
    box-sizing border-box
    border 1px solid $borderColor
    border-top none
    float left
    width 180px
    z-index 199
    background #fff
    padding-top 16px
    overflow-x hidden
    overflow-y auto
    height 100%
    .nav-item
        color $middleColor
        text-align center
        display block
        font-size 14px
        height 50px
        line-height 50px
        border-right 4px solid transparent
        &.on
            color $primaryColor
            border-right 4px solid $primaryColor
            background linear-gradient(#e5f6ff, #fff)